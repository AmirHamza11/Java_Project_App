<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"

    tools:context=".ProfileUpdateActivity">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Your Profile"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="NB:image updating will be added soon"
        android:layout_marginBottom="20sp"
        />

    <EditText

        android:id="@+id/ProfileUpdateFullNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        />

    <EditText

        android:id="@+id/ProfileUpdateAddressEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:hint="Address"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        />

    <EditText

        android:id="@+id/ProfileUpdateEmailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:hint="Email"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/ProfileUpdatePhoneEditText"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/ProfileUpdateFirstPLEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:hint="1st Preferred location"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/ProfileUpdateSecondPLEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="2nd Preferred location"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="35dp"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="#A7FFEB"
        android:onClick="UpdateButton"

        />








</LinearLayout>